{# templates/product/new.html.twig #}
{% extends 'layout.html.twig' %}

{% block title %}Galerie{% endblock %}
{% block body %}
		<h1 class="mt-5 mb-5">Galerie</h1>
		<table class="table">
 			<thead class="thead-dark">
	 			<tr>
					<th scope="col">Nom</th>
					<th scope="col">Date</th>
					<th scope="col">Type</th>
					<th scope="col"></th>
	 			</tr>
 			</thead>
 			<tbody>
				{% for product in products %}
					<tr>
						<td>
							<a
								target="_blank"
								href="{{ upload_directory ~ product.filename }}">   {# ~ = concat√©nation #}
								{{ product.filename }}
							</a>
						</td>
						<td>{{ product.date.format("d/m/Y H:i:s") }}</td>
						<td><i class="fa {{ product.type|iconFile }}"></i></td>
						<td><a href="{{ path("app_product_delete", {id:product.id}) }}"><i class="fa fa-times"></i></a>
					</tr>
				{% endfor %}
	 		</tbody>
		</table>
{% endblock %}
