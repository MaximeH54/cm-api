{# templates/product/new.html.twig #}
{% extends 'layout.html.twig' %}

{% block title %}Gallerie{% endblock %}
{% block stylesheets %}

{% endblock %}
{% block body %}
		<h1 class="mt-5 mb-5">Gallerie</h1>
		<table class="table">
 			<thead>
	 			<tr>
					<th scope="col">Nom</th>
					<th scope="col">Date</th>
					<th scope="col">Type</th>
	 			</tr>
 			</thead>
 			<tbody>
				{% for product in products %}
					<tr>
						<td>
							<a
								target="_blank"
								href="{{ upload_directory ~ product.filename }}">
								{{ product.filename }}
							</a>
						</td>
						<td>{{ product.date.format('d/m/Y h:i') }}</td>
						<td><i class="fa {{ product.type|iconFile }}"></i></td>
					</tr>
				{% endfor %}
	 		</tbody>
		</table>
{% endblock %}
